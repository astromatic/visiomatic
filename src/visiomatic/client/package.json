{
	"name": "visiomatic",
	"version": "3.0.0",
	"description": "Astronomical image client viewer",
	"homepage": "https://github.com/ebertin/pypu#readme",
	"author": "Emmanuel Bertin (IAP/CNRS/SorbonneU/CFHT)",
	"contributors": [
		"Emmanuel Bertin <bertin@iap.fr> (https://github.com/ebertin)",
		"Chiara Marmo <chiara.marmo@u-psud.fr> (https://github.com/cmarmo)",
		"Ruven Pillay <ruven@c2rmf.cnrs.fr> (https://github.com/ruven)"
	],
	"license": "MIT",
	"keywords": [
		"astronomy",
		"wcs",
		"imaging"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ebertin/visiomatic-server.git"
	},
	"bugs": {
		"url": "https://github.com/ebertin/visiomatic-server/issues"
	},
	"dependencies": {
		"chart.js": "=4.3.0",
		"chartjs-plugin-zoom": "^2.0.1",
		"help": "^3.0.2",
		"html2canvas": "~1.4.1",
		"leaflet": "~1.9.4",
		"npm": "^9.2.0",
		"spectrum-vanilla": "^1.1.0",
		"tidy-jsdoc": "^1.4.1"
	},
	"devDependencies": {
		"esbuild": "^0.14.53",
		"eslint": "^8.23.1",
		"jsdoc": "^4.0"
	},
	"main": "dist/visiomatic.js",
	"scripts": {
		"build": "esbuild js/VisiomaticGlobal.js --bundle --outfile=dist/visiomatic.js --watch",
		"docs": "jsdoc -c jsdoc.json js",
		"lint": "eslint js",
		"test": "npm run unit"
	},
	"eslintConfig": {
		"ignorePatterns": [
			"dist"
		],
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"env": {
			"node": true,
			"es6": true
		},
		"rules": {
			"curly": "error",
			"indent": [
				"error",
				"tab"
			],
			"key-spacing": "off",
			"linebreak-style": [
				"off",
				"unix"
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"no-unused-expressions": [
				"error"
			],
			"spaced-comment": "error",
			"strict": "off",
			"wrap-iife": "off",
			"no-invalid-this": "off",
			"prefer-object-has-own": "error",
			"prefer-spread": "off"
		}
	}
}
